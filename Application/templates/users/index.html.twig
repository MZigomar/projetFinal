{% extends 'users.html.twig' %}

{% block title %}Profil de
	{{ app.user.firstname }}
	{{ app.user.lastname }}
{% endblock %}

{% block body %}
	<div class="grix xs4 container">
		{% for message in app.flashes('message') %}
			<div class="col-xs4">
				<div class="p-3 my-2 rounded-1 green light-4 text-green text-dark-4">{{message}}</div>
			</div>

		{% endfor %}
		<div class="col-xs4">
			<h1>Profil de
				{{ app.user.firstname }}
				{{ app.user.lastname }}</h1>
		</div>
		<div class="col-xs1">Nom :</div>
		<div class="col-xs3">{{ app.user.lastname }}</div>
		<div class="col-xs1">Pr√©nom :</div>
		<div class="col-xs3">{{ app.user.firstname }}</div>
		<div class="col-xs1">Email :</div>
		<div class="col-xs3">{{ app.user.email }}</div>
		<div class="col-xs4">
			<a href="{{ path('users_profil_modifier')}}" class="btn blue">Modifier le profil</a>
			<a href="" class="btn blue">Modifier le mot de passe</a>
		</div>
	</div>
{% endblock %}
